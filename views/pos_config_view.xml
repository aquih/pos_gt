<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_pos_gt" model="ir.ui.view">
        <field name="name">pos.config.form.view_pos_gt</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <!-- <field name="allow_discount"/>
                <field name="allow_price_change"/>
                <field name="ask_tag_number"/>
                <field name="takeout_option"/>
                <field name="default_client_id"/>
                <field name="analytic_account_id"/> -->
                <h2>Extras</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_discount"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_discount" string="Permitir descuentos"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="allow_price_change"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_price_change" string="Permitir cambiar precios"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="ask_tag_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="ask_tag_number" string="Asignar numero al pedido"/>
                            <div class="text-muted">
                                Permite asignar una numero al pedido para que el cliente
                                se lleve el numero y luego se le llame por ese numero.
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="takeout_option"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="takeout_option" string="Seleccionar para llevar"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_client_id" string="Cliente por defecto"/>
                            <div class="content-group mt16">
                                <field name="default_client_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="default_client_id" string="Cuenta analítica por defecto"/>
                            <div class="content-group mt16">
                                <field name="analytic_account_id"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="load_order_option"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="load_order_option" string="Opción para cargar ventas"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="save_order_option"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="save_order_option" string="Opción para guardar ventas"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="load_order_session_option"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="load_order_session_option" string="Opción para cargar sesion"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="session_save_order" string="Sesión para guardar pedidos"/>
                            <div class="content-group mt16">
                                <field name="session_save_order"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="opcion_recetas"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="opcion_recetas" string="Opción para ver recetas"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="opcion_pedidos_vendedor"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="opcion_pedidos_vendedor" string="Solo cargar pedidos del vendedor"/>
                        </div>
                    </div>
                </div>
            </sheet>
        </field>
    </record>
</odoo>
