<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_gt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pos_hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="pos_inventory_section" position="after">
                <block title="Extras" id="pos_gt_extras">
                    <setting string="Pedir Etiqueta" help="Permite asignar una numero al pedido para que el cliente se lleve el numero y luego se le llame por ese numero.">
                        <field name="pos_ask_tag_number"/>
                    </setting>
                    <setting string="Poder Marcar Pedido para Llevar">
                        <field name="pos_takeout_option"/>
                    </setting>
                    <setting string="Cliente CF">
                        <field name="pos_default_client_id"/>
                    </setting>
                    <setting string="Cuenta Analítica para Despachos">
                        <field name="pos_ask_analytic_account_id"/>
                    </setting>
                    <setting string="Diario para Nota de Crédito" help="Permite asignar una numero al pedido para que el cliente se lleve el numero y luego se le llame por ese numero.">
                        <field name="pos_diario_nota_credito_id"/>
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
