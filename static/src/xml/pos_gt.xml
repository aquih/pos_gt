<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="TakeOutButton" owl="1">
        <span class='control-button js_take_out'>
            <t t-if="state.take_out">
                <i class='fa fa-shopping-bag' /> Llevar
            </t>
            <t t-if="!state.take_out">
                <i class='fa fa-shopping-bag' /> Restaurante
            </t>
        </span>
    </t>
    
    <t t-name="TagNumberButton" owl="1">
        <span class='control-button js_tag_number'>
            <t t-if="state.tag_number &gt; -1">
                <i class='fa fa-tag' /> <t t-esc="state.tag_number" />
            </t>
            <t t-if="state.tag_number &lt; 0">
                <i class='fa fa-tag' /> Etiqueta
            </t>
        </span>
    </t>

    <t t-name="PartnerListScreen" t-inherit="point_of_sale.PartnerListScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//th[3]" position="after">
            <th>NIT</th>
        </xpath>
    </t>
    
    <t t-name="PartnerLine" t-inherit="point_of_sale.PartnerLine" t-inherit-mode="extension" owl="1">
        <xpath expr="//td[3]" position="after">
            <td>
                <t t-esc="props.partner.vat or ''" />
            </td>
        </xpath>
    </t>

</templates>
